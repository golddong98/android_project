<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.example.habitcheck.ui.home.HomeFragment"
        android:label="Home"
        tools:layout="@layout/fragment_home" >
        <action
            android:id="@+id/action_homeFragment_to_habitListFragment"
            app:destination="@id/habitListFragment" />
    </fragment>

    <fragment
        android:id="@+id/habitListFragment"
        android:name="com.example.habitcheck.ui.list.HabitListFragment"
        android:label="Habit List"
        tools:layout="@layout/fragment_habit_list" >
        <action
            android:id="@+id/action_habitListFragment_to_createUpdateHabitFragment"
            app:destination="@id/createUpdateHabitFragment" />
    </fragment>


    <fragment
        android:id="@+id/createUpdateHabitFragment"
        android:name="com.example.habitcheck.CreateUpdateHabitFragment"
        android:label="Create/Edit Habit"
        tools:layout="@layout/fragment_create_update_habit">

        <argument
            android:name="habitId"
            app:argType="integer"
            android:defaultValue="-1" />

    </fragment>


</navigation>